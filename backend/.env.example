# Backend Environment Variables
# Copia este archivo a .env y llena los valores

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# OpenAI API Key
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-YOUR_API_KEY_HERE

# Base de Datos (si usas)
DATABASE_URL=sqlite:./intento.db
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=intento_db

# JWT Secret (para autenticación futura)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://10.0.2.2:3000

# Logging
LOG_LEVEL=debug

# Email Service (para notificaciones por email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Firebase (Opcional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email@firebase.gserviceaccount.com

# Ambiente
API_VERSION=v1
APP_NAME=IntentoDeApp
